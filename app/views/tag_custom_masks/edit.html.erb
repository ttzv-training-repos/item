<h1>Edit mask</h1>
<div class="row">
    <div class="col overflow-auto h-80vh">
        <div class="accordion" id="accordion">
            <div class="card" id="maskGroup">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <a class="btn collapsed py-0" type="button" data-toggle="collapse" data-target="#collapse">Group #</a>
                </div>
                <div id="collapse" class="collapse hide">
                    <div class="card-body text-center">
                        <input type="radio" name="attributeRadioGroup" id="attributeSelect" data-mask-param="attribute" value="null">
                        <label for="attributeSelect">Attribute</label>
                        <br>
                        <input type="radio" name="attributeRadioGroup" id="attributePassword" data-mask-param="attribute" value="generate_password">
                        <label for="attributePassword">Password</label>
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td class="text-center" colspan="2">
                                        <%= select_tag( :attribute, options_for_select(available_attributes), data:{'mask-param' => 'attribute'}, include_blank: true)%>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-center" colspan="2">
                                        Insert
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label for="insertText">Text</label>
                                    </td>
                                    <td>
                                        <input type="text" name="" id="insertText" data-mask-action='insert' data-mask-param='value'>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label for="insertIndex">Index</label>
                                    </td>
                                    <td>
                                        <input type="text" name="" id="insertIndex" data-mask-action='insert' data-mask-param='index'>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" class="text-center">
                                        Replace
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label for="replaceSearch">Match</label>
                                    </td>
                                    <td>
                                        <label for="replaceRadioMatchText">Text</label>
                                        <input type="radio" value="text" name="replaceRadioMatch" id="replaceRadioMatchText" data-mask-action="replace" data-mask-param="match" required>
                                        <label for="replaceRadioMatchRegExp">RegExp</label>
                                        <input type="radio" value="regexp" name="replaceRadioMatch" id="replaceRadioMatchRegExp" data-mask-action="replace" data-mask-param="match">
                                        <br>
                                        <input type="text" name="" id="replaceSearch" data-mask-action='replace' data-mask-param='search'>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label for="replaceTo">Replacement text</label>
                                    </td>
                                    <td>
                                        <input type="text" name="" id="replaceTo" data-mask-action='replace' data-mask-param='value'>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" class="text-center">
                                        Remove
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label for="removeIndex">Match</label>
                                    </td>
                                    <td>
                                        <label for="removeRadioMatchText">Text</label>
                                        <input type="radio" value="text" name="removeRadioMatch" id="removeRadioMatchText" data-mask-action="remove" data-mask-param="match" required>
                                        <label for="removeRadioMatchRegExp">RegExp</label>
                                        <input type="radio" value="regexp" name="removeRadioMatch" id="removeRadioMatchRegExp" data-mask-action="remove" data-mask-param="match">
                                        <label for="removeRadioMatchIndex">Index</label>
                                        <input type="radio" value="index" name="removeRadioMatch" id="removeRadioMatchIndex" data-mask-action="remove" data-mask-param="match">
                                        <br>
                                        <input type="text" name="" id="removeIndex" data-mask-action='remove' data-mask-param='value'>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" class="text-center">Other</td>
                                </tr>
                                <tr>
                                    <td colspan="2" class="text-center">
                                        <label for="">Upcase</label>
                                        <input type="checkbox" value="true" name="other" id="otherCheckboxUpcase" data-mask-action='other' data-mask-param='upcase'>
                                        <br>
                                        <label for="">Downcase</label>
                                        <input type="checkbox" value="true" name="other" id="otherCheckboxDowncase" data-mask-action='other' data-mask-param='downcase'>
                                        <br>
                                        <label for="">Capitalize</label>
                                        <input type="checkbox" value="true" name="other" id="otherCheckboxCapitalize" data-mask-action='other' data-mask-param='capitalize'>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <button class="btn btn-primary pt-2" id="addMaskGroup">
            <i class="fas fa-plus" aria-hidden="true"></i>
            Add group
        </button>
    </div>
    <div class="col">
        <div class="card">
            <div class="card-header">
                <a >
                    Value
                </a> 
            </div>
            <div class="card-body">
                <%= form_with(model: @tag_custom_mask, url: template_itemtag_tag_custom_mask_path, class: 'form-group') do |tcm| %>
                    <%= tcm.text_area :value, style: 'width: 100%' %><br>
                    <%= tcm.label :use, 'Override default mask' %>
                    <%= tcm.check_box :use %><br>
                    <%= tcm.label :store_value, 'Store value' %>
                    <%= tcm.check_box :store_value %><br>
                    <%= tcm.submit nil, class:"btn btn-primary" %>
                <% end %>
                <span>Preview</span>
                <br>
                <span id="previewArea">
                </span>
                <br>
                <%= link_to 'Get Preview', preview_template_itemtag_tag_custom_mask_path, data:{remote: true, params: ""}, id: "getPreview" %>
            </div>
        </div>
        
    </div>
</div>
