<form>
    <div class="form-group">
      <label for="editTagName">Name</label>
      <input type="text" class="form-control" id="editTagName" aria-describedby="emailHelp" placeholder="Tag Name">
    </div>
    <div class="form-group">
        <label for="editTagDescription">Description</label>
        <input type="text" class="form-control" id="editTagDescription" aria-describedby="emailHelp" placeholder="Description">
      </div>
    <div class="form-group">
      <label for="editTagMask">Default 
          Mask</label>
      <input type="password" class="form-control" id="editTagMask" placeholder="Mask">
    </div>
    <div class="form-check">
      <input type="checkbox" class="form-check-input" id="editTagStoreValue">
      <label class="form-check-label" for="editTagStoreValue">Store value</label>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>