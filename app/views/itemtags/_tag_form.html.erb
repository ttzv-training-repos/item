<%= form_with model: @itemtag do |i|%>
    <%= i.label :name %>
    <%= i.text_field :name %>
    <%= i.label :display_name %>
    <%= i.text_field :display_name %>
    <%= i.label :description %>
    <%= i.text_field :description %>
    <%= i.label :default_value_mask %>
    <%= i.text_field :default_value_mask %>
    <%= i.label :store_value %>
    <%= i.check_box :store_value %>
    <%= i.submit %>
<% end %>