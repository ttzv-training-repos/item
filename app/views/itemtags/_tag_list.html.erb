<ul class="list-group">
    <% tags.each do |tag| %>
        <li class="list-group-item d-flex justify-content-between align-items-center" data-tag-name="<%= tag.name %>" data-tag-id="<%= tag.id %>" data-toggle="popover" title=<%= tag.display_name %> data-content="<%= tag.description %> Inserts: <%= tag.name %>">
            <div class="d-flex">
                <div class="dropdown">
                    <div class="btn btn-primary mx-1" data-toggle="dropdown">
                        <i class="fas fa-edit"></i>
                    </div>
                    <div class="dropdown-menu">
                        <%= render partial: "itemtags/tag_form_local", locals:{ itemtag: tag } %>
                    </div>
                </div>
                <% if associated %>
                    <div class="btn btn-primary mx-1"> 
                        <i class="fas fa-mask"></i>
                    </div>
                <% end %>
                <%= link_to itemtag_path(tag, template_id: @template.id), data: {remote: true, confirm:"Confirm to delete"}, method: "delete", class: "btn btn-primary mx-1" do %>
                    <i class="fas fa-trash"></i>
                <% end %>
            </div>

            <%= tag.display_name %>  

            <%= link_to( template_path(@template, tag_id: tag.id, associate: !associated), {data: {remote: true}, class: "btn btn-primary", method: "post"} ) do %>  
                <% if associated %>
                    <i class="fas fa-minus"></i>
                <% else %>
                    <i class="fas fa-plus"></i>
                <% end %>
            <% end %>
        </li>
    <% end %>
</ul>