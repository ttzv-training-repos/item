<%= form_for [@ad_user, @ad_user_detail], :url => ad_user_ad_user_details_path do |detail| %>
  <ul>
  <% @ad_user_detail.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <% unless @ad_user.office.nil? %>
    <p><%= @ad_user.office.name %>, <%= @ad_user.office.name_2 %></p>
  <% end %>
  <div class="form-group">
    <%= detail.label :office_id %><br />
    <%= detail.collection_select :office_id, Office.all, :id, :display_office_info, { include_blank: true }, { class: "custom-select" }%>
  </div>  
  <div class="form-group">
    <%= detail.label :position %><br />
    <%= detail.text_field :position, class: "form-control" %>
  </div>
  <p>
  <%= detail.submit "Save", class: "btn btn-primary" %>
  </p>
<% end %>