<div class="scrollable-custom pt-2">
    <table class="d-none">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Content</th>
                <th>Type</th>
                <th>Status</th>
                <th>Status content</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            <% @sent_items.each do |item| %>
            <tr>
                <td><%=item.id%></td>
                <td><%=item.title%></td>
                <td><%=item.content%></td>
                <td><%=item.item_type%></td>
                <td><%=item.status%></td>
                <td><%=item.status_content%></td>
                <td><%=item.created_at%></td>
                <% end %>
            </tr>
        </tbody>
    </table>
    <div class="row">
        <div class="col-sm mb-2">
            <div class="card">
                <div class="card-header">
                    Mailer settings
                </div>
                <div class="card-body">
                    <%= render partial: 'smtp_settings' %>
                </div>
            </div>
        </div>
        <div class="col-sm mb-2">
            <div class="card">
                <div class="card-header">
                    LDAP connection settings
                </div>
                <div class="card-body">
                   <%= render partial: 'ldap_settings' %>
                </div>
            </div>
        </div>
        <div class="col-sm mb-2">
            <div class="card">
                <div class="card-header">
                    Other application settings
                </div>
                <div class="card-body">
                    <%= render partial: 'application_settings' %>
                    <%= link_to 'Run Office Autobinder', autobind_path, class: "btn btn-primary mb-1" %>
                    <%= link_to 'Force LDAP Sync', sync_ldap_path, class: "btn btn-primary" %>
                </div>
            </div>
        </div>
    </div>
    
    
    
    
    
    
    
</div>