<%= link_to 'Run Office Autobinder', autobind_path %>
<br>
<%= link_to 'Sync LDAP', sync_ldap_path %>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Content</th>
            <th>Type</th>
            <th>Status</th>
            <th>Status content</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        <% @sent_items.each do |item| %>
            <tr>
                <td><%=item.id%></td>
                <td><%=item.title%></td>
                <td><%=item.content%></td>
                <td><%=item.item_type%></td>
                <td><%=item.status%></td>
                <td><%=item.status_content%></td>
                <td><%=item.created_at%></td>
            <% end %>
        </tr>
    </tbody>
</table>

<%= render partial: 'smtp_settings' %>

