<div class="text-center pt-5">
  <%= render partial: 'item/user_selection' %>
  <div style="width: 20rem; margin:auto; opacity: 50%;" class="pt-5">
    <h2>Log in</h2>

      <div class="form-group">
        <label for="email"> Email </label>
        <input type="email" name="email" id="email" class="form-control" disabled>
      </div>
      
      <div class="form-group">
        <label for="password"> Password </label>
        <input type="password" name="password" id="password" class="form-control" disabled>
      </div>
      
      <div class="form-group form-check">
        <input type="checkbox" name="remember_me" id="remember_me" class="form-check-input" disabled>
        <label for="remember_me"> Remember me </label>
      </div>
      
      <div class="actions">
        <input type="submit" value="Log in" class="btn btn-primary">
      </div>
      
      <%= render "devise/shared/links" %>
    </div> 
  </div>